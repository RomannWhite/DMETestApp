<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/fragmentbackground"
    android:backgroundTint="@color/color_DarkGray">
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">
        <ImageView
            android:id="@+id/UserPhoto"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/nouser"/>
        <View
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/photoroundcropper"
            android:backgroundTint="@color/color_DarkGray"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="0.0dp">
            <TextView
                android:id="@+id/UserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Фамилия, Имя"
                android:textSize="16dp"
                android:textColor="@color/color_White"/>
            <TextView
                android:id="@+id/UserSecondName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Отчество"
                android:textSize="16dp"
                android:textColor="@color/color_White"/>
        </LinearLayout>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/UserCalllPlace"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/phoneicon"
            android:scaleType="fitCenter"
            android:padding="3dp"/>
        <TextView
            android:id="@+id/UserPhoneCall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="8 (800) 555 35 35"
            android:textSize="18dp"
            android:textColor="@color/color_White"
            android:layout_marginLeft="45dp" />
    </FrameLayout>
    <FrameLayout
        android:id="@+id/UserSmsPlace"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/smsicon"
            android:scaleType="fitCenter"
            android:padding="3dp"/>
        <TextView
            android:id="@+id/UserPhoneSms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="8 (800) 555 35 35"
            android:textSize="18dp"
            android:textColor="@color/color_White"
            android:layout_marginLeft="45dp" />       
    </FrameLayout>
    <FrameLayout
        android:id="@+id/UserEmailPlace"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="15dp">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/mailicon"
            android:scaleType="fitCenter"
            android:padding="3dp"/>
        <TextView
            android:id="@+id/UserEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="somemail@example.cow"
            android:textSize="18dp"
            android:textColor="@color/color_White"
            android:layout_marginLeft="45dp" />
    </FrameLayout>
</LinearLayout>
